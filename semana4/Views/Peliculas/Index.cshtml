@model IEnumerable<Pelicula>

@{
    bool isAdmin = User.IsInRole("Admin");
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        /* Reset de Estilos */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Estilos Globales */
        body {
            font-family: Arial, sans-serif;
            background-color: #000;
            color: white;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            padding: 0 20px;
            text-align: center;
        }

        .marquee {
            width: 100%;
            white-space: nowrap;
            animation: marquee 15s linear infinite;
            padding-top: 3px;
            padding-bottom: 3px;
            background: linear-gradient(to right, #761908, #764E08, #761908);
            color: white;
        }

        .card-title {
            font-family: 'Playfair Display', serif;
            color: #f6ab6c;
        }

        .card {
            background-color: #1f1f1f;
            border: none;
            border-radius: 10px;
            transition: transform 0.3s ease-in-out;
        }

            .card:hover {
                transform: scale(1.05);
                box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.5);
            }

        .btn-primary {
            background-color: #f6ab6c;
            border-color: #f6ab6c;
            transition: background-color 0.3s ease, border-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #e94560;
                border-color: #e94560;
            }

        .btn-outline-light {
            color: #ffffff;
            border-color: #ffffff;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .btn-outline-light:hover {
                background-color: #ffffff;
                color: #1f1f1f;
            }

        .btn-outline-danger {
            color: #e94560;
            border-color: #e94560;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .btn-outline-danger:hover {
                background-color: #e94560;
                color: #ffffff;
            }

        .card-text {
            font-size: 14px;
        }

        .card-img-top {
            border-bottom: 1px solid #333;
        }

        .btn-group .btn {
            min-width: 100px;
        }

        .btn-group {
            display: flex;
            justify-content: center;
        }
    </style>
</head>
<body>
    @if (isAdmin)
    {
        <p class="text-center">
            <a class="btn btn-primary btn-lg" asp-action="Create">+ Crear Nueva Película</a>
        </p>
    }
    <div class="container">
        <div class="row">
            @foreach (var pelicula in Model)
            {
                @if (pelicula.Activo || isAdmin)
                { //Este condicional verifica si la película está activa (Activo es true) o si el usuario tiene el rol de administrador (isAdmin es true). Si alguna de estas condiciones se cumple, se renderiza la tarjeta de película.
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm bg-dark text-white rounded-lg overflow-hidden">
                        <img src="@pelicula.Portada" class="card-img-top" alt="Carátula de @pelicula.Titulo" style="height: 400px; object-fit: cover;">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title text-center">@pelicula.Titulo</h5>
                                <p class="card-text text-center">
                                    <strong>Director:</strong> @pelicula.Director<br />
                                    <strong>Fecha de Lanzamiento:</strong> @pelicula.FechaDeLanzamiento.ToShortDateString()<br />
                                    <strong>Duración:</strong> @pelicula.Duracion minutos<br />
                                </p>
                            </div>
                            <div class="d-flex justify-content-center align-items-center mt-3">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-light mx-1" asp-action="Details" asp-route-id="@pelicula.PeliculaId">Detalles</a>
                                    @if (isAdmin){
                                            <a class="btn btn-sm btn-outline-light mx-1" asp-action="Edit" asp-route-id="@pelicula.PeliculaId">Editar</a>
                                            <a class="btn btn-sm btn-outline-danger mx-1" asp-action="Delete" asp-route-id="@pelicula.PeliculaId">Eliminar</a>
                                        }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                }
            }
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>